[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
    display none !important

.main-content
    display relative

.right-sidebar
    padding 0

.content-for-day
    height 550px
    overflow-y scroll
    position relative

ul
    list-style-type none
    padding 0

