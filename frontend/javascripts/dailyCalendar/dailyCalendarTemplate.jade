#dayView(ng-cloak)
    .day-header
      i.glyphicon.pull-left.day-chevron.glyphicon-chevron-left.bigger-icon.day-prev(class="btn btn-large btn-info"  ng-click='previous()')
      span.current-day#pickDate{{dvCtrl.selectedDate | date: 'd EEE yyyy'}}
      date-picker.sidebar-datepicker(for="pickDate")
      i.glyphicon.pull-right.day-chevron.glyphicon-chevron-right.bigger-icon.day-next(class="btn btn-large btn-info" ng-click='next()')
      
    .content-for-day
      table.day-in-table(width='100%')#calendar.table
            tbody
                tr(ng-repeat="timeSt in dvCtrl.timeStamps")
                    td.hourCell {{timeSt}}
                    td.eventCell(ng-dblclick="dvCtrl.toggleModal()" ng-click="dvCtrl.toggleEventInfo()")
        .eventInfo.well(ng-show="dvCtrl.eventSelected")
            #eventName
                strong Event name:
                span {{dvCtrl.event.name}}
            #eventDescription
                strong Description:
                p {{dvCtrl.event.description}}
            #eventAuthor
                strong Created by:
                span {{dvCtrl.event.author}}
            #eventRoom
                strong Room #
                span {{dvCtrl.event.room}}
            #eventParticipants
                strong Participants: 
                span.badge {{dvCtrl.event.participants}}
    
    #showAllEvents.text-center
        .checkbox
            label
                input(type="checkbox") 
                | Show all events
    modal(title='New event', visible='dvCtrl.modalShown')
