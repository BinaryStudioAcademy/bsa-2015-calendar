#dayView(ng-cloak)
    .col-md-8.col-sm-8.main-content
        table#calendar.table
            tr(ng-repeat="timeSt in dvCtrl.timeStamps")
                td.hourCell {{timeSt}}
                td.eventCell(ng-dblclick="dvCtrl.toggleModal()")
    .col-md-4.col-sm-4.right-sidebar
        .row.text-center
            ul.list-inline
                li
                    a(href='#')
                        i.glyphicon.glyphicon-chevron-left.bigger-icon
                li
                    button.btn.btn-default
                        {{dvCtrl.selectedDate | date: 'd EEE yyyy'}}
                    date-picker (for="pickDate")
                li
                    a(href='#')
                        i.glyphicon.glyphicon-chevron-right.bigger-icon
        #showAllEvents.text-center
            input(type="checkbox", id="showEvents")
            label(for="showEvents") Show all events
            button.btn.btn-primary(ng-click="dvCtrl.toggleEventInfo()") Toggle Info
        .eventInfo.well(ng-show="dvCtrl.eventSelected")
            #eventName
                strong Event name:
                span {{dvCtrl.event.name}}
            #eventDescription
                strong Description:
                p {{dvCtrl.event.description}}
            #eventAuthor
                strong Created by:
                span {{dvCtrl.event.author}}
            #eventRoom
                strong Room #
                span {{dvCtrl.event.room}}
            #eventParticipants
                strong Participants: 
                span.badge {{dvCtrl.event.participants}}
    pop-up-window(show='dvCtrl.modalShown' width='750px' height='60%')