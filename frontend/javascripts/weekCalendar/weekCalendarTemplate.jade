#weekView(ng-cloak)
  .col-sm-10.main-content.col-lg-11
    
    ul.list-inline.text-center
      li
        a(href='#')
          i.glyphicon.glyphicon-chevron-left.bigger-icon
      li 
        span {{wCtrl.Start | date: 'd MMM yyyy'}} ----- {{wCtrl.End | date: 'd MMM yyyy'}} 
      li
        a(href='#')
          i.glyphicon.glyphicon-chevron-right.bigger-icon


    table#calendar.table.table-bordered(time-week-directive events-week-directive)
      tr.success.text-center 
        td
        td(ng-repeat="day in wCtrl.days")
          span {{day.name}}


      tr(ng-repeat="timeSt in wCtrl.timeStamps")
        td.hourCell {{timeSt.time}}
        td.eventCell.mon(ng-class='{{$index}}')
        td.eventCell.tue(ng-class='{{$index}}')
        td.eventCell.wed(ng-class='{{$index}}')
        td.eventCell.thu(ng-class='{{$index}}')
        td.eventCell.fri(ng-class='{{$index}}')
        td.eventCell.sat(ng-class='{{$index}}')
        td.eventCell.sun(ng-class='{{$index}}')


  .col-sm-2.right-sidebar.col-lg-1.hidden-xs
    .row.text-center
    #showAllEvents.text-center
      input(type="checkbox", id="showEvents")
      label(for="showEvents") Show all events
      br
      button.btn.btn-primary(ng-click="wCtrl.toggleEventInfo()") Toggle Info
    .eventInfo.well.col-sm-12.col-lg-12(ng-show="wCtrl.eventSelected") 
      div Title: {{wCtrl.currentEvent.title}}
      div Description: {{wCtrl.currentEvent.description}}
      div Start: {{wCtrl.currentEvent.start}}
      div End: {{wCtrl.currentEvent.end}}
      div Room: {{wCtrl.currentEvent.room}}





