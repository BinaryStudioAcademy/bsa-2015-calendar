div(ng-controller='MonthController')
    div.month-header
        button.pull-left(ng-click='previous()') Previous
        span.month-header-title {{month.format("MMMM, YYYY")}}
        button.pull-right(ng-click='next()') Next
    div
        table.month-table-grid(width="100%")
            col(width='14.28%')
            col(width='14.28%')
            col(width='14.28%')
            col(width='14.29%')
            col(width='14.29%')
            col(width='14.29%')
            col(width='14.29%')
            tr
                th.tg-month-yw4l.month-day-header Sun
                th.tg-month-yw4l.month-day-header Mon
                th.tg-month-yw4l.month-day-header Tue
                th.tg-month-yw4l.month-day-header Wed
                th.tg-month-yw4l.month-day-header Thu
                th.tg-month-yw4l.month-day-header Fri
                th.tg-month-yw4l.month-day-header Sat
            tr(ng-repeat='week in weeks')
                td.tg-month-yw4l.month-day(ng-class="{ 'month-day-today': day.isToday, 'different-month': !day.isCurrentMonth }", ng-repeat='day in week.days') {{day.number}}
                    div.month-event(ng-repeat='event in day.events | limitTo: (maxDisplayEventsNumber - 1)', ng-click='showEventDetails(event)') {{event.name | limitTo: maxEventNameLength}}
                    div.month-event(ng-show='day.events.length == maxDisplayEventsNumber') {{day.events[2]}}
                    a.month-more-events(ng-show='day.events.length > maxDisplayEventsNumber', ng-click='showAllDayEvents(day)') +{{day.events.length - 2}} More