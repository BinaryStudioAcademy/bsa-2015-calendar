									input.form-control(type='text', aria-label='...' ng-model="evMonthCtrl.event.room.title" placeholder="Room..." disabled)
							.col-md-6.col-sm-6
								.checkbox
									label
										input(type='checkbox', value='', ng-model='evMonthCtrl.event.isPrivate')
										| &nbsp;Private
					.form-group
						.col-md-10.col-sm-10.col-md-offset-2.col-sm-offset-2
							.col-md-6.col-sm-6
								div(ng-dropdown-multiselect='', 
									translation-texts='evMonthCtrl.selectConfigDevices', 
									selected-model='evMonthCtrl.event.devices', 
									options='evMonthCtrl.devices', 
									extra-settings='evMonthCtrl.selectConfigDevices')
							.col-md-6.col-sm-6
								div(ng-dropdown-multiselect='', 
