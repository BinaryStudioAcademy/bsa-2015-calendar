.modal
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
				h4.modal-title {{ title }}
			.modal-body.clearfix
				form(role='form' name='newEventForm')
					form.form-horizontal
						.form-group
							label.col-md-2.col-sm-2.control-label Time:
							.col-md-10.col-sm-10
								.col-md-6.col-sm-6.col-xs-6
									.input-group
										.input-group-addon
											i.glyphicon.glyphicon-time
										input.form-control(type='text', placeholder='From...', required, ng-pattern='/^(?:0?[0-9]|1[0-9]|2[0-3]):[0-5][0-9]$/', ng-model='dvCtrl.event.start')
								.col-md-6.col-sm-6.col-xs-6
									.input-group
										.input-group-addon
											i.glyphicon.glyphicon-time
										input.form-control(type='text', placeholder='Till...', required, ng-pattern='/^(?:0?[0-9]|1[0-9]|2[0-3]):[0-5][0-9]$/', ng-model='dvCtrl.event.end')                                
						.form-group
							label.col-md-2.control-label(for="eventTitle") Title:
							.col-md-10
								.col-md-12
									input.form-control(type='text', id="eventTitle" placeholder='Name the event...', ng-model="dvCtrl.event.title")
						.form-group
							label.col-md-2.control-label(for="eventDescription") About:
							.col-md-10
								.col-md-12
									textarea.form-control(rows='5', id="eventDescription" placeholder='Description...', ng-model="dvCtrl.event.description")
						.form-group
							label.col-md-2.col-sm-2.control-label Organization:
							.col-md-10.col-sm-10
								.col-md-6.col-sm-6.col-xs-6
									.input-group
										.input-group-addon 
											i.glyphicon.glyphicon-piggy-bank
										input.form-control(type='text', placeholder='Price...', ng-model='dvCtrl.event.price')
								.col-md-6.col-sm-6.col-xs-6
									.input-group
										.input-group-btn
											button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
												| Type 
												span.caret
											ul.dropdown-menu
												li(ng-repeat="type in dvCtrl.eventTypes" ng-click="dvCtrl.selectEventType(type)")
													a(href="") 
														| {{ type }}
										input.form-control(type='text', aria-label='...' ng-model="dvCtrl.event.type" disabled)
						.form-group
							.col-md-10.col-sm-10.col-md-offset-2.col-sm-offset-2
								.col-md-6.col-sm-6
									.input-group
										.input-group-btn
											button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
												span
													i.glyphicon.glyphicon-home
											ul.dropdown-menu
												li(ng-repeat="room in dvCtrl.availableRooms" ng-click="dvCtrl.selectRoom(room)")
													a(href='') 
														| {{ room.title }}
										input.form-control(type='text', aria-label='...' ng-model="dvCtrl.event.room.title" placeholder="Room..." disabled)
								.col-md-6.col-sm-6
									.checkbox
										label
											input(type='checkbox', value='', ng-model='dvCtrl.event.isPrivate')
											&nbsp;Private
						.form-group
							.col-md-10.col-sm-10.col-md-offset-2.col-sm-offset-2
								.col-md-6.col-sm-6
									div(ng-dropdown-multiselect='', 
										translation-texts='dvCtrl.selectConfigDevices', 
										selected-model='dvCtrl.event.devices', 
										options='dvCtrl.availableInventory', 
										extra-settings='dvCtrl.selectConfigDevices')
								.col-md-6.col-sm-6
									div(ng-dropdown-multiselect='', 
										translation-texts='dvCtrl.selectConfigUsers', 
										selected-model='dvCtrl.event.users', 
										options='dvCtrl.users', 
										extra-settings='dvCtrl.selectConfigUsers')
			.modal-footer
				.save-area
					.alert.alert-success.alert-dismissible(role='alert' ng-show='dvCtrl.formSuccess')
						button.close(type='button', data-dismiss='alert', aria-label='Close')
							span(aria-hidden='true')
								i.glyphicon.glyphicon-remove
						strong Success!
						|  You've just saved the event! Check the calendar now.
					.col-md-6.col-sm-6.col-xs-6
						button.btn.btn-primary(type='submit' ng-disabled="newEventForm.$invalid" ng-click="dvCtrl.submitEvent(dvCtrl.event, newEventForm, dvCtrl.selectedDate)") Save
					.col-md-6.col-sm-6
						button.btn.btn-default(type='submit' ng-click="dvCtrl.toggleModal()") Cancel
