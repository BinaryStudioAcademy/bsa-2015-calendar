.device_list(ng-controller='createNewDeviceController')

  .device_list_header
    h1(align='center') Create a new device

    .form-group
      label.col-sm-2(for="device") title: 
      .col-sm-10
        input(type='text', class="form-control", id="device", placeholder="Enter title", ng-model='cndCtrl.device.title')
      label.col-sm-2(for="description" class="form-control4") description: 
      .col-sm-10
        input(type='text', class="form-control", id="description", placeholder="Enter description", ng-model='cndCtrl.device.description')  

    .form-group
      .col-sm-offset-2.col-sm-10
        button(ng-click='cndCtrl.reset()' class="btn btn-warning form-btn") Reset form
        button(ng-click='cndCtrl.addDevice()' class='btn btn-info form-btn') Save
    .button-div2
      h4 Devices: {{ cndCtrl.devices.length }}.
      button(ng-click='cndCtrl.toggleViewDevice()') Display/hide all devices
    br


  device_list_body(align='center', ng-show='cndCtrl.showDevicesList')
    .div_search
      b Search device:
      input(type='text', size='19', border='1', ng-model='cndCtrl.search')

    .content_for_device_list
      table.col-sm-12.table-responsive.table-hover.table.deviceTable(border='1', ng-show='cndCtrl.showDevicesList')
        tr
          th.col-sm-4 device title
          th.col-sm-6 device description
          th.col-sm-1 change
          th.col-sm-1 delete
        tr(ng-repeat='device in cndCtrl.devices | filter: cndCtrl.search')
          td
            input#inputDeviceTitle(class="form-control", ng-model='device.title')
          td
            input#inputDeviceDescription(class="form-control", ng-model='device.description')
          td(align='center')   
            button(class="btn btn-info btn-xs" ng-click='cndCtrl.updateDevice(device)') save            
            //- a(ng-click='cndCtrl.updateDevice(device)') save
          td(align='center')  
            button(class="btn btn-primary btn-xs btn-danger" ng-click='cndCtrl.deleteDevice(device, $index)') delete
            //- a(ng-click='cndCtrl.deleteDevice(device, $index)') delete 
